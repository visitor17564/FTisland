<form method="POST" action="/api/posts/<%=userInfo.userId%>">
  <div class="modal-body">

    <div class="form-group form-floating mb-3">
      <input name="title" class="form-control" id="title" value=<%=post.title%> required>
      <label for="title">Title</label>
    </div>
    <div class="form-group form-floating mb-3">
      <textarea name="contents" class="form-control" id="contents" style="height: 100px"
        required><%=post.contents%></textarea>
      <label for="Post_contents">Contents</label>
    </div>
  </div>
  <div class="d-flex justify-content-between">
    <a class="btn btn-warning" href="/posts/<%=post.postId%>">뒤로가기</a>
    <button type="submit" class="btn btn-primary">
      수정하기
    </button>
  </div>
</form>