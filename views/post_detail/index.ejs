<%- include('../partials/header') %>
  <div class="container">
    <div class="card mb-3" style="max-width: 1320px">
      <div class="row g-0">
        <div class="col-md-7">
          <img src="/image/test.jpg" class="w-100" alt="..." />
        </div>
        <div class="col-6 col-md-5">
          <div class="card-body" style="height: 100%;">

            <div class="h2 mb-1">
              <%= post.title %>
            </div>
            <div class="small mb-3">
              <%= post.createdAt %>
            </div>
            <div class="card-text" style="height: 80%;">할배가 적은 포스트 내용</div>
          </div>
        </div>
      </div>
    </div>

    <!-- 댓글창 구현 -->

    <div>
      <form method="POST" action="/posts/<%= post.postId %>/comments">
        <div class="form-group mb-3">
          <label for="form-control" class="form-label">댓글 </label>
          <input class="form-control" id="exampleFormControlInput1" placeholder="댓글을 작성해주세요.">
          <div class="small ms-2"> 엔터를 눌러주세요.</div>
        </div>
      </form>
    </div>
    <hr class="mt-3">

    <div class="collapse show" id="post<%= post.postId %>">
      <% if (comments.size> 0) { %>
        <% for (const key in comments.comment) { %>
          <div class="card-body comment-section mb-3">
            <div class="d-flex justify-content-between ">
              <div class="font-weight-bold " style="padding: 3px;">
                <%= key %>
              </div>
              <small class="align-self-end " style="margin-right: 10px;">
                Fri Nov 24 2023 20:32:38 GMT+0900 (대한민국 표준시)
              </small>
            </div>
            <!-- 댓글 내용  반복 시키자-->
            <div class="d-flex justify-content-between mt-2">
              <div>
                <%- include('../partials/comment.card.ejs',{key:comments.comment[key], User : User}) %>
              </div>
            </div>
          </div>
          <% }} %>


    </div>
  </div>





  <%- include('../partials/posts_modal.ejs') %>

    <%- include('../partials/footer') %>